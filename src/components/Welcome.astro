---
import { Image } from 'astro:assets';
import ruralImage from '../assets/rural.jpeg';
import mission from'../assets/mission.jpeg';
import contri1 from '../assets/contri1.jpg';
import contri2 from '../assets/contri2.webp';
import contri3 from '../assets/contri3.jpg';
import img1 from '../assets/1.jpeg';
import img2 from '../assets/2.jpeg';
import img3 from '../assets/3.jpeg';
import img4 from '../assets/4.jpeg';
import img5 from '../assets/5.jpeg';
import Header from './Header.astro';

const name = import.meta.env.PUBLIC_NAME;
---

<Header />

<section class="relative pt-32 lg:pt-36">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      {/* Text Content */}
      <div class="space-y-6 order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-minecraft leading-tight text-gray-900">
          Towards a transformed India, where a billion thrive with dignity and equity
        </h1>
        <p class="text-xl md:text-2xl text-blue-900 font-minecraft">
          Join us to make a difference
        </p>
        <div class="pt-3">
          <a href="/join" class="inline-flex items-center px-8 py-4 bg-gray-900 text-white font-minecraft rounded-full hover:bg-gray-800 transition-colors duration-300">
            Learn more
          </a>
        </div>
      </div>

      {/* Image */}
      <div class="relative h-[400px] lg:h-[500px] rounded-lg overflow-hidden order-1 lg:order-2">
        <Image 
          src={ruralImage} 
          alt="Rural India" 
          class="object-cover w-full h-full"
          width={800}
          height={500}
        />
      </div>
    </div>
  </div>
</section>

{/* Mission Section */}
<section class="py-20">
  <div class="flex flex-col md:flex-row w-full">
    {/* Mission Text */}
    <div class="w-full md:w-1/2 bg-blue-900 p-12 md:p-20 flex items-center">
      <div class="max-w-2xl">
        <h2 class="text-4xl md:text-5xl font-minecraft text-white mb-6">Our Mission</h2>
        <p class="text-xl md:text-2xl text-white font-minecraft leading-relaxed">
          We ignite the self-worth and dignity of common people across the villages and cities of India and mobilize them as equal stakeholders — inspiring them to leverage the value and potential of all they have — to solve their challenges.
        </p>
      </div>
    </div>

    {/* Mission Image */}
    <div class="w-full md:w-1/2 h-[400px] md:h-auto">
      <Image 
        src={mission} 
        alt="Rural community members" 
        class="w-full h-full object-cover"
        width={1200}
        height={800}
      />
    </div>
  </div>
</section>

{/* Image Collage Section */}
<section class="py-8 sm:py-12 md:py-16 bg-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {/* Large image */}
      <div class="relative h-48 sm:h-64 md:h-[500px]">
        <Image 
          src={img1} 
          alt="Abhyudhi Impact 1" 
          class="w-full h-full object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
        />
      </div>
      {/* Four smaller images */}
      <div class="grid grid-cols-2 gap-4">
        <div class="relative h-48 sm:h-64 md:h-[240px]">
          <Image 
            src={img2} 
            alt="Abhyudhi Impact 2" 
            class="w-full h-full object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
          />
        </div>
        <div class="relative h-48 sm:h-64 md:h-[240px]">
          <Image 
            src={img3} 
            alt="Abhyudhi Impact 3" 
            class="w-full h-full object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
          />
        </div>
        <div class="relative h-48 sm:h-64 md:h-[240px]">
          <Image 
            src={img4} 
            alt="Abhyudhi Impact 4" 
            class="w-full h-full object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
          />
        </div>
        <div class="relative h-48 sm:h-64 md:h-[240px]">
          <Image 
            src={img5} 
            alt="Abhyudhi Impact 5" 
            class="w-full h-full object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
          />
        </div>
      </div>
    </div>
  </div>
</section>

{/* Objectives Section */}
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Section Header */}
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-minecraft text-gray-900 mb-4">Objectives</h2>
      <div class="w-24 h-1 bg-blue-900 mx-auto"></div>
    </div>

    {/* Objectives Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {/* Objective 1 */}
      <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="text-blue-900 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </div>
        <h3 class="text-xl font-minecraft text-gray-900 mb-4">Essential Support</h3>
        <p class="text-gray-600 font-minecraft text-sm">To help and facilitate poor people by providing them with essential requirements like food, clothes etc.</p>
      </div>

      {/* Objective 2 */}
      <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="text-blue-900 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-xl font-minecraft text-gray-900 mb-4">Education Support</h3>
        <p class="text-gray-600 font-minecraft text-sm">To help students pursue their education by providing them with stationaries such as pens, pencils, books, or any other beneficence.</p>
      </div>

      {/* Objective 3 */}
      <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="text-blue-900 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-minecraft text-gray-900 mb-4">Special Care Services</h3>
        <p class="text-gray-600 font-minecraft text-sm">To assist and render services to physically and mentally challenged people.</p>
      </div>

      {/* Objective 4 */}
      <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="text-blue-900 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z" />
          </svg>
        </div>
        <h3 class="text-xl font-minecraft text-gray-900 mb-4">Animal Welfare</h3>
        <p class="text-gray-600 font-minecraft text-sm">To provide food for street animals.</p>
      </div>

      {/* Objective 5 */}
      <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="text-blue-900 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
        </div>
        <h3 class="text-xl font-minecraft text-gray-900 mb-4">Environmental Care</h3>
        <p class="text-gray-600 font-minecraft text-sm">To clean the streets, buildings, and public places and also create awareness among the public on the current environmental issues.</p>
      </div>
    </div>

    {/* Bottom CTA */}
    <div class="text-center mt-16">
      <a href="/objectives" class="inline-flex items-center px-8 py-4 bg-blue-900 text-white font-minecraft rounded-full hover:bg-blue-800 transition-colors duration-300">
        Learn More About Our Work
      </a>
    </div>
  </div>
</section>
{/* Impact Section */}
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-minecraft text-center mb-16">
        Our Impact ( April 2014 to March 2024 )
      </h2>
  
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
        {/* Stat 1 */}
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">63 Millions</div>
          <p class="text-gray-600 font-minecraft">Kgs of Material Handled</p>
        </div>
  
        {/* Stat 2 */}
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">31</div>
          <p class="text-gray-600 font-minecraft">Presence in States / UT</p>
        </div>
  
        {/* Stat 3 */}
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">18 Millions</div>
          <p class="text-gray-600 font-minecraft">Approx Lives touched through Goonj work</p>
        </div>
  
        {/* Stat 4 */}
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">1.6 Millions</div>
          <p class="text-gray-600 font-minecraft">Approx Persondays of work created</p>
        </div>
  
        {/* Stat 5 */}
        <div class="text-center lg:col-start-2">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">96000+</div>
          <p class="text-gray-600 font-minecraft">Total community development projects</p>
        </div>
  
        {/* Stat 6 */}
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">3 Million</div>
          <p class="text-gray-600 font-minecraft">Total Units of Quilts and Sitting mats</p>
        </div>
  
        {/* Stat 7 */}
        <div class="text-center lg:col-start-3">
          <div class="text-4xl md:text-5xl font-minecraft text-blue-900 mb-4">9 Million</div>
          <p class="text-gray-600 font-minecraft">Total Units of Goonj MY Pad</p>
        </div>
      </div>
    </div>
  </section>
{/* Contribute Section */}
<section class="py-20 bg-orange-400">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl md:text-4xl font-minecraft text-white text-center mb-16">
      Contribute
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {/* Card 1 */}
      <div class="bg-white rounded-2xl overflow-hidden transform hover:scale-105 transition-transform duration-300">
        <div class="h-64 relative">
          <Image 
            src={contri1} 
            alt="Dil Ki Suno, Goonj Karo" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-minecraft text-blue-900 mb-4">Donate Materials</h3>
          <p class="text-gray-600 mb-6">Join the Festival of Giving, DAAN UTSAV 2024! Together, let's bridge the gaps and spread happiness through simple acts of giving.</p>
          <a href="/contribute" class="inline-block bg-blue-900 text-white font-minecraft px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors">
            Contribute
          </a>
        </div>
      </div>

      {/* Card 2 */}
      <div class="bg-white rounded-2xl overflow-hidden transform hover:scale-105 transition-transform duration-300">
        <div class="h-64 relative">
          <Image 
            src={contri2} 
            alt="Team 5000" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-minecraft text-blue-900 mb-4">Team 5000</h3>
          <p class="text-gray-600 mb-6">By joining Team 5000, you step into this legacy of grass roots action that empowers communities and amplifies the voices of the marginalised.</p>
          <a href="/contribute" class="inline-block bg-blue-900 text-white font-minecraft px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors">
            Contribute
          </a>
        </div>
      </div>

      {/* Card 3 */}
      <div class="bg-white rounded-2xl overflow-hidden transform hover:scale-105 transition-transform duration-300">
        <div class="h-64 relative">
          <Image 
            src={contri3} 
            alt="Goonj It!" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-minecraft text-blue-900 mb-4">Join us!</h3>
          <p class="text-gray-600 mb-6">Goonj have been making efforts where we reduce, reuse, and recycle surplus/ waste material mostly textile bringing exponential impact...</p>
          <a href="/contribute" class="inline-block bg-blue-900 text-white font-minecraft px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors">
            Contribute
          </a>
        </div>
      </div>
    </div>

    {/* Call to Action */}
    <div class="text-center mt-16">
      <p class="text-white text-xl md:text-2xl font-minecraft mb-8">Every contribution, big or small, helps us create lasting change</p>
      <a href="/contribute" class="inline-block bg-white text-blue-900 font-minecraft px-8 py-4 rounded-lg text-xl hover:bg-gray-100 transition-colors">
        Start Contributing Today
      </a>
    </div>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    
    .header-container {
      padding: 0 1rem;
    }
  }
</style>
