---

import Header from "./Header.astro"
import co1 from '../assets/co1.jpeg'
import co2 from '../assets/co2.jpeg'
import co3 from '../assets/co3.jpeg'   
import co4 from '../assets/co4.jpeg'
import Image from "astro/components/Image.astro"; 
---

<Header/>

<main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800 text-white py-8 sm:py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6">
        <div class="text-center mb-8 sm:mb-12 md:mb-16">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 sm:mb-4 bg-clip-text text-transparent bg-gradient-to-r from-yellow-400 to-yellow-600">
                Our Co-Founders
            </h1>
            <p class="text-lg sm:text-xl text-gray-300 max-w-2xl mx-auto px-4 mt-14">
                Meet the visionaries behind Abhyudhi who are dedicated to transforming lives across India.
            </p>
        </div>

        {/* Co-founders Grid */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {/* Co-founder 1 */}
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all">
                <div class="aspect-square mb-6 overflow-hidden rounded-lg">
                    <Image 
                    src={co1} 
                    alt="Co-founder Name" 
                    class="w-full h-full object-cover"                    
                  />    
                </div>
                <h3 class="text-2xl font-semibold mb-2 text-yellow-400">Sharan Aiyappa </h3>
            
                <p class="text-gray-300">B.A.LL.B</p>
            </div>

            {/* Co-founder 2 */}
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all">
                <div class="aspect-square mb-6 overflow-hidden rounded-lg">
                    <Image 
                    src={co3} 
                    alt="Co-founder Name"            
                    class="w-full h-full object-cover"
                    ></Image>
                </div>
                <h3 class="text-2xl font-semibold mb-2 text-yellow-400">Sampat Nagraj Joshi </h3>
            
                <p class="text-gray-300">B.A.LL.B</p>
            </div>

            {/* Co-founder 3 */}
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all">
                <div class="aspect-square mb-6 overflow-hidden rounded-lg">
                    <Image 
                    src={co2} 
                    alt="Co-founder Name"
                    class="w-full h-full object-cover"
                    ></Image>
                </div>
                <h3 class="text-2xl font-semibold mb-2 text-yellow-400">Varun Bopanna </h3>
                <p class="text-gray-300">B.A.LL.B</p>
            </div>

            {/* Co-founder 4 - Centered */}
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all md:col-span-2 lg:col-span-1 lg:col-start-2">
                <div class="aspect-square mb-6 overflow-hidden rounded-lg">
                   <Image 
                    src={co4} 
                    alt="Co-founder Name"
                    class="w-full h-full object-cover"
                    ></Image>   
                </div>
                <h3 class="text-2xl font-semibold mb-2 text-yellow-400">Nishkal Ram</h3>
                <p class="text-gray-300">B.A.LL.B</p>
            </div>
        </div>

        {/* Vision Statement */}
        <div class="mt-16 text-center">
            <blockquote class="text-xl sm:text-2xl text-gray-300 max-w-4xl mx-auto italic">
                "Our vision is to create a more equitable society where every individual has the opportunity to thrive and contribute to India's growth story."
            </blockquote>
        </div>
    </div>
</main>

<style>
    .container {
        max-width: 1200px;
    }
    
    @media (max-width: 640px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
</style>
